<%= form_for([@user, @event]) do |f| %>

  <%= f.collection_select(:user_classroom_id, @user.user_classrooms, :id, :teacher_name) %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.label "How many kids" %>
  <%= f.text_field :kids %>

  <%= f.label "How many adults" %>
  <%= f.text_field :adults %>

  <%= f.submit "Submit" %>
<% end %>